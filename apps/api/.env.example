# API Server Configuration
PORT=3000
NODE_ENV=production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/metachat

# CORS Configuration
# CRITICAL SECURITY: List all allowed origins as comma-separated values
# Never use wildcard '*' in production - this enables CSRF attacks and credential theft
# Format: https://domain1.com,https://domain2.com,http://localhost:3000
API_CORS_ORIGINS=https://chat.genai.hr,https://www.chat.genai.hr

# Security Configuration
# Enforce HTTPS in production (set to 'false' to disable)
ENFORCE_HTTPS=true

# Trust proxy headers (set to 'true' when behind Caddy/nginx)
TRUST_PROXY=true

# HSTS max age in seconds (default: 1 year)
HSTS_MAX_AGE=31536000

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX=120

# Body Size Limit
API_BODY_LIMIT=5mb

# Redis (optional - for Socket.IO clustering)
REDIS_URL=redis://localhost:6379

# RabbitMQ (optional - for task queues)
RABBITMQ_URL=amqp://localhost:5672

# Webchat Authentication
WEBCHAT_JWT_SECRET=your-jwt-secret-here
WEBCHAT_HMAC_SECRET=your-hmac-secret-here

# Health Check
HEALTH_CHECK_CACHE_TTL_MS=3000
