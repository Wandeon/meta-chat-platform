# Core service configuration
NODE_ENV=production
PORT=3000
API_URL=https://chat.genai.hr

# Storage
STORAGE_PATH=/app/storage

# Database
DATABASE_URL=postgresql://metachat:metachat@postgres:5432/metachat?schema=public

# Redis
REDIS_URL=redis://redis:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://rabbitmq:5672

# Authentication & security
ADMIN_JWT_SECRET=replace-with-64-character-random-secret
ADMIN_JWT_TTL_SECONDS=900
ADMIN_JWT_AUDIENCE=admin
ADMIN_JWT_ISSUER=meta-chat-api
ADMIN_JWT_DEFAULT_SCOPE=admin:read
ADMIN_KEY_PEPPER=
ENCRYPTION_KEY=replace-with-32-byte-hex
GLOBAL_API_KEY=

# LLM defaults
LLM_PROVIDER=openai
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_API_KEY=
OPENAI_ORG_ID=

# Observability
LOG_LEVEL=info
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=100

# Rate limiting and webhooks
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
WEBHOOK_RETRY_MAX_ATTEMPTS=5
WEBHOOK_RETRY_INITIAL_DELAY_MS=1000
