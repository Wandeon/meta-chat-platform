{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@meta-chat/shared": ["../../packages/shared/src"],
      "@meta-chat/shared/*": ["../../packages/shared/src/*"],
      "@meta-chat/database": ["../../packages/database/src"],
      "@meta-chat/database/*": ["../../packages/database/src/*"],
      "@meta-chat/events": ["../../packages/events/src"],
      "@meta-chat/events/*": ["../../packages/events/src/*"],
      "@meta-chat/orchestrator": ["../../packages/orchestrator/src"],
      "@meta-chat/orchestrator/*": ["../../packages/orchestrator/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__", "src/**/*.test.ts", "src/**/*.spec.ts", "node_modules", "dist"],
  "references": [
    { "path": "../../packages/shared" },
    { "path": "../../packages/database" },
    { "path": "../../packages/events" },
    { "path": "../../packages/orchestrator" }
  ]
}
