{
  "name": "meta-chat-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-tenant WhatsApp, Messenger, and Web Chat platform with RAG-powered AI assistants",
  "author": "Your Team",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "npm run test:unit && npm run test:integration",
    "lint": "eslint \"{apps,packages,tests}/**/*.ts\" --max-warnings=0",
    "db:generate": "cd packages/database && npm run generate",
    "db:push": "cd packages/database && npm run push",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:studio": "cd packages/database && npm run studio",
    "clean": "turbo run clean && rm -rf node_modules",
    "test:unit": "VITEST_MODE=unit vitest --config vitest.unit.config.ts --run",
    "test:integration": "VITEST_MODE=integration vitest --config tests/integration/vitest.config.ts --run",
    "test:all": "vitest --config vitest.config.ts --run",
    "test:perf": "mkdir -p reports/perf && ARTILLERY_NO_COLOR=1 artillery run tests/perf/rest-load.yml --output reports/perf/rest-results.json",
    "lint:fix": "npm run lint -- --fix",
    "scan:deps": "npm audit --audit-level=high",
    "scan:security": "npm run lint && npm run scan:deps",
    "qa:collect": "node scripts/collect-quality-report.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitest/coverage-v8": "^1.5.0",
    "artillery": "^2.0.26",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^1.7.1",
    "supertest": "^6.3.3",
    "testcontainers": "^11.7.1",
    "turbo": "^1.13.0",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.0.0",
  "dependencies": {
    "@rolldown/pluginutils": "^1.0.0-beta.51",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "isomorphic-dompurify": "^2.32.0"
  }
}
